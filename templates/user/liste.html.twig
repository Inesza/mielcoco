{% extends "base.html.twig" %}

{% block title %} Liste des membres {% endblock %}

{% block body %}
    
    <table class="table table-bordered">
        <tr>
            <th colspan=2 class="text-center">Nb de membres : {{ taille }}</th>
        </tr>
        <tr>
            <th>Membres</th><th>Role</th><th colspan=2>Actions</th>
        <tr>
        {% for user in users %}
            <tr>
                <td><a href="{{ path("user_show", { id: user.id }) }}">{{ user.email }}</a></td>
                <td>{{ user.roles[0] }}</td>
                <td><a href="{{ path("user_update", { id: user.id }) }}" class="fa fa-pen"></a></td>
                <td><a href="{{ path("user_delete", { id: user.id }) }}" class="fa fa-trash"></a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}