      <hr class="w-100 clearfix d-md-none">

      <!-- Grid column -->
      <div class="col-md-4 col-lg-32 col-xl-3 mx-auto mt-3">
        <h6 class="text-uppercase mb-4 font-weight-bold">A propos de Miel & Coco</h6>
        <p>
          <a href="{{ path('qui_sommes_nous') }}">Qui sommes nous?</a>
        </p>
        <p>
          <a href="{{ path('cosmetique_bio') }}">Cosmétique Bio</a>
        </p>
        <p>
          <a href="{{ path('cgv_mentions') }}">Conditions générales de vente</a>
        </p>
        <p>
          <a href="{{ path('cgv_mentions') }}">Mentions légales</a>
        </p>
        <p>
          <a href="{{ path('cgv_mentions') }}">Protection des données </a>
        </p>
      </div>
      <!-- Grid column -->

      <hr class="w-100 clearfix d-md-none">

      <!-- Grid column -->
      <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
