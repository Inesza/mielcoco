<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{{ encore_entry_link_tags("app") }}{% endblock %}
    </head>
    <body>
    <header class="bg-white">
        <div class="header container">
            <a class="navbar-brand" href="{{ path('home') }}"><img class="logo" src="/images/divers/logomielcoco.png" alt="Miel&Coco"></a>

            <form class="form-inline my-2 my-lg-0" method="POST" action="{{ path('recherche') }}">
                <input class="form-control mr-sm-2 border-warning" type="search" name="recherche" aria-label="Search">
                <button class="btn btn-outline-warning my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
            </form>  
                <li class="nav-item">
                {% if not is_granted("IS_AUTHENTICATED_FULLY") %}
                    <a class="nav-link" href="{{ path("app_login") }}">Connexion</a>
                    <a class="nav-link" href="{{ path("user_register") }}">Créer un compte</a>
                {% endif %}

                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <a class="nav-link" href="{{ path("app_logout") }}">Déconnexion</a>
                {% endif %}
                
                {% if is_granted("ROLE_USER") %} 
                    <a class="nav-link" href="">Mon panier<i class="fas fa-shopping-cart"></i></a>
                {% endif %}
                
                </li>
                <li class="nav-item">
                  <a href="{{ path("panier") }}" class="text-warning h2"><i class="fas fa-shopping-cart"></i></a>
                </li>
        </div>
        <div class="navigation bg-light">
          <nav class="container navbar-expand-lg navbar-light bg-light">
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  {# si l'ADMIN est connecte #}
                  {% if is_granted("ROLE_ADMIN") %} 
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administration</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path("admin_produit") }}">Produits</a>
                            <a class="dropdown-item" href="{{ path("admin_recette") }}">Recettes</a>
                            <a class="dropdown-item" href="{{ path("admin_categorie") }}">Categories</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("user_list") }}">Utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("liste_commande") }}">Commandes</a>
                    </li>
                    {% endif %}
                </ul>


                <ul class="navbar-nav mr-auto"id="menu">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("home") }}"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("corps") }}">CORPS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("cheveux") }}">CHEVEUX</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("visage") }}">VISAGE</a>
                    </li>
                </ul>
                
              {# <!-- Mon compte -->
              {# si le client est connecte #}
                {% if is_granted("ROLE_USER") %} 
                <div class="row">
                  <div class="col-3">
                    <p>Bonjour, {{app.user.email }}</p>
                  </div>
                </div>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    MON COMPTE
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <button class="dropdown-item" type="button">
                      <a href="">Mes coordonnées</a>
                      {# {{ path('client_update') }} #}
                    </button>
                    <button class="dropdown-item" type="button">
                      <a href="{{ path('commande') }}">Suivre mes commandes</a>  
                    </button>
                    <button class="dropdown-item" type="button">
                      <a href="{{ path('panier') }}">Mon panier</a> 
                    </button>
                    <button class="dropdown-item" type="button">
                      <a href="{{ path('app_logout') }}">Se déconnecter</a> 
                    </button>
                  </div>
                </div>
              {% endif %} <!-- Mon compte -->

            </div>
        </div>
    </header>
   
        {% for type, messages in app.flashes %}
        <div class="container my-4">
          <div class="alert alert-{{ type }} col-md-4">
              {% for message in messages %}
                  {{ message }}
              {% endfor %}
          </div>
        </div>
        {% endfor %}
    
        {% block body %}{% endblock %}
        <!-- Footer -->
    <!-- Footer -->
<footer class="expand-lg light bg-light">

  <!-- Footer Links -->
  <div class="container text-center text-md-left">

    <!-- Footer links -->
    <div class="row text-center text-md-left mt-3 pb-3">

      <hr class="w-100 clearfix d-md-none">

      <!-- Grid column -->
      <div class="col-md-4 col-lg-32 col-xl-3 mx-auto mt-5">
        <h6 class="text-uppercase mb-4 font-weight-bold">A propos de Miel & Coco</h6>
        <p>
          <a href="{{ path('qui_sommes_nous') }}">Qui sommes nous?</a>
        </p>
        <p>
          <a href="{{ path('cosmetique_bio') }}">Cosmétique Bio</a>
        </p>
        <p>
          <a href="{{ path('cgv_mentions') }}">Conditions générales de vente</a>
        </p>
        <p>
          <a href="{{ path('cgv_mentions') }}">Mentions légales</a>
        </p>
        <p>
          <a href="{{ path('cgv_mentions') }}">Protection des données </a>
        </p>
      </div>
      <!-- Grid column -->

      <hr class="w-100 clearfix d-md-none">

      <!-- Grid column -->
      <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-5">
        <img class="logo mb-3" src="/images/divers/logomielcoco.png" alt="Miel&Coco">
        <p class="text-center text-md-left">©2020 - Tous droits réservés.<br>
          <a href="{{ path('home') }}"> Miel & Coco </a>
        </p>
      </div>

      <!-- Grid column -->
      <hr class="w-100 clearfix d-md-none">

      <!-- Grid column -->
      <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-5">
       <h6 class="text-uppercase mb-4 font-weight-bold">Nous suivre</h6>
        <!-- Social buttons -->
            <li class="list-inline-item">
              <a class="btn-floating btn-sm rgba-white-slight mx-1">
                <i class="fab fa-facebook-f"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a class="btn-floating btn-sm rgba-white-slight mx-1">
                <i class="fab fa-twitter"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a class="btn-floating btn-sm rgba-white-slight mx-1">
                <i class="fab fa-instagram"></i>
              </a>
            </li>
        </div>
      </div>
      <!-- Grid column -->
 
    </div>
    <!-- Footer links -->

  </div>
  <!-- Footer Links -->

</footer>
<!-- Footer -->
        {% block javascripts %}{{ encore_entry_script_tags("app") }}{% endblock %}
    </body>
</html>


