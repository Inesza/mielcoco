<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{{ encore_entry_link_tags("app") }}{% endblock %}
    </head>
    <body>
    <header class="container">
        <div class="header">
            <a class="navbar-brand" id="logo" href="{{ path('home') }}">Miel & Coco </a>

                <form class="form-inline  my-2 my-lg-0" method="POST">
                    <input class="form-control mr-sm-2" type="search" name="recherche" aria-label="Search">
                    <button class="btn btn-outline-info my-2 my-sm-0" type="submit" href="{{ path('recherche') }}"><i class="fas fa-search"></i></button>
                </form>  
                <li class="nav-item">
                {% if not is_granted("IS_AUTHENTICATED_FULLY") %}
                    <a class="nav-link" href="{{ path("app_login") }}">Connexion</a>
                    <a class="nav-link" href="{{ path("user_register") }}">Créer un compte</a>
                {% endif %}

                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <a class="nav-link" href="{{ path("app_logout") }}">Déconnexion</a>
                {% endif %}
                
                {% if is_granted("ROLE_USER") %} 
                    <a class="nav-link" href="">Mon panier<i class="fas fa-shopping-cart"></i></a>
                {% endif %}
                
                </li>

        </div>
        <nav class="container navbar-expand-lg navbar-light bg-light mb-3">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                {# si l'ADMIN est connecte #}
                 <ul class="navbar-nav mr-auto">
                    {% if is_granted("ROLE_ADMIN") %} 
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administration</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path("admin_produit") }}">Produits</a>
                            <a class="dropdown-item" href="{{ path("admin_recette") }}">Recettes</a>
                            <a class="dropdown-item" href="{{ path("admin_categorie") }}">Categories</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("user_list") }}">Utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("liste_commande") }}">Commandes</a>
                    </li>
                    {% endif %}
                </ul>


                <ul class="navbar-nav mr-auto"id="menu">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("home") }}"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("corps") }}">CORPS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("cheveux") }}">CHEVEUX</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("visage") }}">VISAGE</a>
                    </li>
                </ul>
            </div>

        </div>
    </header>
    <div class="container my-4">
        {% for type, messages in app.flashes %}
        <div class="alert alert-{{ type }} col-md-4">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
        {% endfor %}
    </div>
        {% block body %}{% endblock %}
        
        <!-- Footer -->
    <!-- Footer -->
<footer class="container expand-lg light bg-light mb-3">

  <!-- Footer Links -->
  <div class="container text-center text-md-left">

    <!-- Footer links -->
