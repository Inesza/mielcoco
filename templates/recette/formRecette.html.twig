{% extends 'base.html.twig' %}

{% block title %}Miel & Coco - {{ mode is defined ? mode|capitalize : "Ajouter" }} une recette{% endblock %}

{% block body %}
<div class="container bg-white p-5">
    <a class="btn btn-secondary mb-5" href="{{ path("admin_recette") }}"><i class="fas fa-caret-left"></i> Annuler et revenir Ã  la liste des recettes</a>
    <h1>{{ mode is defined ? mode|capitalize : "Ajouter" }} une recette</h1>
    <div class="formulaire col-md-5 offset-md-3 my-4">
    {{ form_start(formRecette) }}
        {{ form_row(formRecette.photo) }}
        {% if mode is defined and mode == "Modifier" %} 
            <img class='img-recette mb-3' src='/images/recettes/{{ recette.photo }}'>
        {% endif %}
        {{ form_row(formRecette.nom) }}
        
        {{ form_row(formRecette.description) }}
        
        {{ form_row(formRecette.instructions) }}
        
        
        <div class="form-row">
            <div class="col">{{ form_row(formRecette.niveau) }}</div>
            <div class="col">{{ form_row(formRecette.categorie) }}</div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <button class="btn btn-warning">Enregistrer</button>
        </div>
    {{ form_end(formRecette) }}
    </div>
</div>
{% endblock %}